<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    tools:context=".new_user">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="NEW MEMBER"
                android:textStyle="italic|bold"
                android:textColor="#B9004A6F"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="20dp"
                android:hint="Name"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/et_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="20dp"
                android:hint="Registration_id"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/et_doj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="20dp"
                android:hint="Date of joining"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/et_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="20dp"
                android:hint="Club name"
                android:layout_marginTop="10dp"
                />
            <TextView
            android:id="@+id/et_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:textSize="20dp"
            android:hint="Post"
            android:layout_marginTop="10dp"
            />
            <RadioGroup
                android:id="@+id/radiobuttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <RadioButton
                android:id="@+id/president"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textColor="@android:color/darker_gray"
                android:text="President" />
            <RadioButton
                android:id="@+id/secretary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textColor="@android:color/darker_gray"
                android:text="Secretary" />
            <RadioButton
                android:id="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textColor="@android:color/darker_gray"
                android:text="Member" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="20dp"
                android:hint="Email_id"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/et_phno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="20dp"
                android:hint="Mobile no."
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/et_oaddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="20dp"
                android:hint="Office address"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/et_haddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="20dp"
                android:hint="Residental address"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/et_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="20dp"
                android:hint="Date of birth"
                android:layout_marginTop="10dp"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Create"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#9FFFC107"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>